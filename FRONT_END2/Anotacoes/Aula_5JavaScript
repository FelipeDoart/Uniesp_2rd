// ARRAY
//conceito: Uma lista ordenada de elementos, que podem ser acessados por um índice numérico.
//Declaração de um array:
let frutas = ["maçã", "banana", "laranja"];
//outra forma:
let numeros = new Array(1, 2, 3, 4, 5);

//Acessando elementos do array:
console.log(frutas[0]); // "maçã"
console.log(frutas[1]); // "banana"
console.log(frutas[2]); // "laranja"
//Tamanho do array:
console.log(frutas.length); // 3

//Shift e Unshift
//Removendo o primeiro elemento do array:
let primeiraFruta = frutas.shift(); 
console.log(primeiraFruta); // "maçã"
console.log(frutas); // ["banana", "laranja"]
//Adicionando um elemento no início do array:
frutas.unshift("morango");
console.log(frutas); // ["morango", "banana", "laranja"]

//pop e push
//Removendo o ultimo elemento do array:
let ultimaFruta2 = frutas.pop();
console.log(ultimaFruta2); // "laranja"
console.log(frutas); // ["morango", "banana"]   
//Adicionando um elemento no final do array:
frutas.push("abacaxi");
console.log(frutas); // ["morango", "banana", "abacaxi"]

//Percorrendo um array com for
for (let i = 0; i < frutas.length; i++) {
    console.log(frutas[i]);
}
//Percorrendo um array com for...of
for (let fruta of frutas) {
    console.log(fruta);
}
//Percorrendo com for..in
for (let index in frutas) {
    console.log(frutas[index]);//acessa o elemento pelo índice
}
//Percorrendo com forEach
frutas.forEach(function(fruta, index) {
    console.log(`Índice ${index}: ${fruta}`);
});
//outra forma com arrow function
frutas.forEach((fruta, index) => {
    console.log(`Índice ${index}: ${fruta}`);
});

//OUTROS METODOS DE ARRAY

//indexOf - retorna o índice do primeiro elemento encontrado, ou -1 se não encontrado
let posicaoBanana = frutas.indexOf("banana");
console.log(posicaoBanana); // 1
let posicaoUva = frutas.indexOf("uva");
console.log(posicaoUva); // -1  
//lastIndexOf - retorna o índice do último elemento encontrado, ou -1 se não encontrado
frutas.push("banana");
let ultimaPosicaoBanana = frutas.lastIndexOf("banana");
console.log(ultimaPosicaoBanana); // 3

//includes - verifica se o array contém um elemento, retorna true ou false
let temLaranja = frutas.includes("laranja");
console.log(temLaranja);
let temUva = frutas.includes("uva");
console.log(temUva);// false

//join - junta todos os elementos do array em uma string, separados por um delimitador
let frutasString = frutas.join(", ");
console.log(frutasString); // "morango, banana, abacaxi, banana"

//slice - retorna uma cópia de uma parte do array, do índice start até end (não inclusivo)
let algumasFrutas = frutas.slice(1, 3);
console.log(algumasFrutas); // ["banana", "abacaxi"]
//se omitir o segundo parâmetro, vai até o final do array
let frutasDois = frutas.slice(1);
console.log(frutasDois); // ["banana", "abacaxi", "banana"]
//se usar índice negativo, conta a partir do final do array
let ultimasDuasFrutas = frutas.slice(-2);
console.log(ultimasDuasFrutas); // ["abacaxi", "banana"]
//splice - remove ou substitui elementos do array, e/ou adiciona novos elementos
//Removendo 1 elemento a partir do índice 1
let removidas = frutas.splice(1, 1);
console.log(removidas); // ["banana"]
console.log(frutas); // ["morango", "abacaxi", "banana"]

//Ordenação
//sort - ordena os elementos do array
frutas.sort();
console.log(frutas); // ["abacaxi", "banana", "morango"]
//reverse - inverte a ordem dos elementos do array
frutas.reverse();
console.log(frutas); // ["morango", "banana", "abacaxi"]